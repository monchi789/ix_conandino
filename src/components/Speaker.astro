---
const { image, description, name, title, time } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute w-3 h-3  rounded-full mt-1.5 -start-1.5 border border-white bg-gray-700"
  >
  </div>
  <time
    class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
    >{time}</time
  >
  <div class="flex gap-x-4">
    <img class="rounded-full h-16 w-16" src={image} alt={description} />
    <div class="flex flex-col justify-center">
      <h3 class="text-lg font-semibold text-gray-900">
        {name}
      </h3>
      <p class="mb-4 text-base font-normal text-gray-500">
        {title}
      </p>
    </div>
  </div>
</li>
